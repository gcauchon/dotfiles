[user]
  name = Guillaume Cauchon
  email = guillaume.cauchon@umanomedical.com
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIEgsqTBRlUD+aCKyA8G4KS9tI9R5RvLygV0C0Y9hptcb

[core]
  autocrlf = input
  excludesfile = /Users/gcauchon/.gitignore_global
  editor = nvim

[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX

[diff]
  noprefix = true
  tool = tig
  verbosity = 5

[init]
  defaultBranch = main

[pull]
  rebase = true

[merge]
  tool = diffmerge
  verbosity = 5

[commit]
  gpgsign = true

[gpg]
  format = ssh

[alias]
  a = add --all
  c = commit --message
  ca = commit  --amend
  s = status --untracked-files=all
  br = branch --verbose
  bl = branch --list
  bd = branch --delete --force
  co = checkout
  cb = checkout -b
  f = fetch
  fm = !git fetch --verbose && git merge --ff-only
  fp = fetch --prune
  m = merge --ff-only
  unstage = reset HEAD
  rollback = reset --soft HEAD^1
  r = rebase
  rc = rebase --continue
  rs = rebase --skip
  ra = rebase --abort
  p = push
  ph = push --set-upstream origin HEAD
  pf = push --force-with-lease
  po = push origin

